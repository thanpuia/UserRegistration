<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:textOff="Debug Mode"
            android:textOn="Op Mode"
            android:gravity="top"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:padding="0dp"
            android:text="Department Name"
            android:textColor="@color/offwhite"
            android:textSize="33dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/bg1"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/offwhite"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/offwhite"
            android:textSize="33dp"
            android:gravity="center"
            android:paddingTop="21dp"
            android:fontFamily="sans-serif-condensed-medium"/>

    </LinearLayout>



    <Space
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="65dp"
        android:paddingRight="65dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/loginId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:maxLines="1"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="@color/offwhite"
            app:met_floatingLabelText="Your Email"
            android:hint="   Your Email"
            app:met_textColorHint="@color/offwhite2"
            app:met_textColor="@color/offwhite"
            android:inputType="textWebEmailAddress"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="@color/offwhite"
            app:met_floatingLabelText="Password"
            android:hint="   Password"
            app:met_textColorHint="@color/offwhite2"
            app:met_textColor="@color/offwhite"
            android:inputType="textPassword"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:gravity="right"
            android:textColor="@color/offwhite2"
            android:onClick="forgotPasswordClick"
            android:paddingBottom="15dp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/betloginandresigter" />

        <Button
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/my_button_bg"
            android:text="Login"
            android:onClick="loginClick"
            android:textColor="@color/offwhite2"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/betloginandresigter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not yet Register?"
                android:textColor="@color/offwhite2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Register"
                android:textColor="@color/offwhite"
                android:textStyle="bold"
                android:onClick="registrationClick"
                android:paddingBottom="30dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>