<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrationActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/bg1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginStart="119dp"
        android:layout_marginTop="253dp"
        android:layout_marginBottom="255dp"
        android:src="@drawable/bg2"
        app:civ_border_color="@color/offwhite"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="260dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/usernameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:hint="Your Username"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Your Username"
            app:met_floatingLabelTextColor="@color/offwhite"
            app:met_textColor="@color/offwhite"
            app:met_textColorHint="@color/offwhite" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
            android:hint="Password"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Password"
            app:met_floatingLabelTextColor="@color/offwhite"
            app:met_textColor="@color/offwhite"
            app:met_textColorHint="@color/offwhite" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/phoneET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
            android:hint="Mobile Number"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Mobile Number"
            app:met_floatingLabelTextColor="@color/offwhite"
            app:met_textColor="@color/offwhite"
            app:met_textColorHint="@color/offwhite" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:hint="Your Email"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Your Email"
            app:met_floatingLabelTextColor="@color/offwhite"
            app:met_textColor="@color/offwhite"
            app:met_textColorHint="@color/offwhite" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loginClick"
            android:padding="30dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>