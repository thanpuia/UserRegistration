<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrationActivity"
    android:background="@drawable/bg1">




    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#B3E9E3E3"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="40dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:gravity="center"
            android:textSize="30dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#80445E"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/usernameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:maxLines="1"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Your Username"

            app:met_floatingLabelTextColor="@color/offwhitedark"
            app:met_textColor="@color/offwhitedark"
            app:met_textColorHint="@color/offwhite2" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:maxLines="1"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Password"
            app:met_floatingLabelTextColor="@color/offwhitedark"
            app:met_textColor="@color/offwhitedark"
            app:met_textColorHint="@color/offwhite2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/countryCodeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/phoneET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:maxLines="1"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="Mobile Number"
                app:met_floatingLabelTextColor="@color/offwhitedark"
                app:met_textColor="@color/offwhitedark"
                app:met_textColorHint="@color/offwhite2" />

        </LinearLayout>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email"
            android:maxLines="1"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Your Email"
            app:met_floatingLabelTextColor="@color/offwhitedark"
            app:met_textColor="@color/offwhitedark"
            app:met_textColorHint="@color/offwhite2" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/addressET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Address"
            android:maxLines="1"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Your Address"
            app:met_floatingLabelTextColor="@color/offwhitedark"
            app:met_textColor="@color/offwhitedark"
            app:met_textColorHint="@color/offwhite2" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Submit"
            android:onClick="newRegistrationClick"
            android:background="#6A4056"
            android:layout_gravity="center"
            android:textColor="@color/offwhite"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Member Login?"
            android:textStyle="bold"
            android:onClick="memberLoginClick"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

    </LinearLayout>




</ScrollView>